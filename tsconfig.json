{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "lib": ["esnext", "dom"],
    "types": ["vitest/importMeta"]
  },
  "exclude": ["tests/fixtures/**/*", "playground/**/*"]
}
